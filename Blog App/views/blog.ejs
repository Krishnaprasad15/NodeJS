<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %> 
    <title>Blog</title>
</head>
<body>
    <!-- <h1>HELLO</h1> -->
    <%- include("./partials/nav.ejs") %>
    <div class="container mt-5 ">
        <h1 class="px-4">Title : <%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" width="800px"/>
        <p><pre class="px-4"><%= blog.body %></pre></p>
    </div>
    <div class="container mt-3">
        <img src="<%= blog.createdBy.profileImageURL %>" width="40px">
        <%= blog.createdBy.fullName %>
    </div>

    <div class="container mt-3">
        <h2>Comments (<%= comment.length %>)</h2>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <div class="mb-3">
                    <input type="text" name="content" class="form-control" placeholder="Enter your comment"/>
                    <button class="btn btn-sm btn-primary" type="submit">Add</button>
                </div>
            </form>
        <% } %>
        <div class="mt-3">
            <% comment.forEach(ele => { %>
                <div>
                    <img src="<%= ele.createBy.profileImageURL %>" width="30px">
                    <%= ele.createBy.fullName %>: 
                    <pre><%= ele.content %></pre>
                </div>
            <% }) %>
        </div>
    </div>
    <%- include('./partials/script.ejs') %>
</body>
</html>